<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovie"
    android:orientation="vertical"
    android:background="#C80B0B"
    >

    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Movie Favourite"
        android:background="#202020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C80B0B"
        android:textSize="35dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="JUDUL MOVIE"
        android:id="@+id/tv_judulfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#202020"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_posterfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/tv_descriptfav"
        android:text="Deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"/>



</LinearLayout>

